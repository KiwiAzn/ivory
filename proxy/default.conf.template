map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

server {
  listen 80;
  listen [::]:80;
  server_name "";

  location / {
    proxy_pass ${UI_SERVER_HOST};
  }

  location /api {
    proxy_pass ${API_SERVER_HOST};

    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade; 
  }
}